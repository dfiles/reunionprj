<h1>New Classmate Profile</h1>

<% form_for(@profile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :current_f_name %><br />
    <%= f.text_field :current_f_name %>
  </p>
  <p>
    <%= f.label :current_l_name %><br />
    <%= f.text_field :current_l_name %>
  </p>
  <p>
    <%= f.label :suffix %><br />
    <%= f.text_field :suffix %>
  </p>
  <p>
    <%= f.label :current_prefix %><br />
    <%= f.text_field :current_prefix %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :address1 %><br />
    <%= f.text_field :address1 %>
  </p>
  <p>
    <%= f.label :address2 %><br />
    <%= f.text_field :address2 %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :zip4 %><br />
    <%= f.text_field :zip4 %>
  </p>
  <p>
    <%= f.label :name_suffix %><br />
    <%= f.text_field :name_suffix %>
  </p>
  <p>
    <%= f.label :marital_status %><br />
    <%= f.select(:marital_status,['Married','Single','Widowed','Divorced','In Relationship'], {:selected=> @profile.marital_status})%>
  </p>
  <p>
    <%= f.label :spouse_name %><br />
    <%= f.text_field :spouse_name %>
  </p>
 <p>
   <b>Mail Status</b><br />
     <%= f.select(:mail_status,['Mail', 'Email', 'Both'],:prompt => 'Select')%>
  </p>
  <p>
    <b>Private?</b><br />
    <%= f.check_box :priv_flg %>
  </p>
  <p>
    <b>On Map?</b><br>
     <%= f.check_box :on_map %>
  </p>
  <p>
   <b>Profile Status</b><br />
    <%= f.select(:profile_status,['Contact','Missing','Deceased'], :prompt => 'Select')%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', profiles_path %>