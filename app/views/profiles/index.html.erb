<h1>Listing profiles</h1>

<table>
  <tr>
    <th>* </th>
    <th>First name</th>
    <th>Last name</th>
    <th>Current f name</th>
    <th>Current l name</th>
    <th>Current prefix</th>
    <th>Email</th>
    <th>Mail status</th>
    <th>Priv flg</th>
    <th>Profile status</th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%=h profile.first_name %></td>
    <td><%=h profile.last_name %></td>
    <td><%=h profile.current_f_name %></td>
    <td><%=h profile.current_l_name %></td>
    <td><%=h profile.current_prefix %></td>
    <td><%=h profile.email %></td>
    <td><%=h profile.mail_status ? "TRUE" : "FALSE" %></td>
    <td><%=h profile.priv_flg  ? "TRUE" : "FALSE" %></td>
    <td><%=h profile.profile_status %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

