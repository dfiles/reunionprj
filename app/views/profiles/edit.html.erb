  </p>
  <p>
    <%= f.label :marital_status %><br />
    <%= f.text_field :marital_status %>
  </p>
  <p>
    <%= f.label :spouse_name %><br />
    <%= f.text_field :spouse_name %>
  </p>
  <p>
   <b>Mail Status</b><br />
    <%= f.select(:mail_status, options_for_select(["Mail","Email","Both"], @profile.mail_status)) %>
