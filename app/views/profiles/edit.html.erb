   <b>Profile Status</b><br />
    <%= f.select(:profile_status, options_for_select(["Contact","Missing","Deceased","Active"], @profile.profile_status))%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

